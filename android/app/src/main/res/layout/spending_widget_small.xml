<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container_small"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp"
    android:background="#1A1A1A">

    <!-- Today Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/spending_card_background"
        android:gravity="center"
        android:layout_marginEnd="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#E2E8F0"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/widget_today_amount_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0.00"
            android:textColor="#00FF88"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Week Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/spending_card_background"
        android:gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:textColor="#E2E8F0"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/widget_week_amount_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0.00"
            android:textColor="#FFD700"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Month Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/spending_card_background"
        android:gravity="center"
        android:layout_marginStart="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textColor="#E2E8F0"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/widget_month_amount_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0.00"
            android:textColor="#FF6B9D"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>
