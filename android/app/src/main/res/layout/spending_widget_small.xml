<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container_small"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Today Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/spending_card_background"
        android:gravity="center"
        android:layout_marginEnd="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#666666"
            android:textSize="12sp"
            android:textStyle="normal"
            android:gravity="center"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/widget_today_amount_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0.00"
            android:textColor="#1565C0"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Week Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/spending_card_background"
        android:gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:textColor="#666666"
            android:textSize="10sp"
            android:textStyle="normal"
            android:gravity="center"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/widget_week_amount_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0.00"
            android:textColor="#1565C0"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Month Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/spending_card_background"
        android:gravity="center"
        android:layout_marginStart="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textColor="#666666"
            android:textSize="10sp"
            android:textStyle="normal"
            android:gravity="center"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/widget_month_amount_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0.00"
            android:textColor="#1565C0"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>
